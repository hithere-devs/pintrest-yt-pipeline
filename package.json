{
	"name": "video-pipeline",
	"version": "0.1.0",
	"description": "Pinterest video downloader service with scheduled YouTube upload pipeline.",
	"type": "commonjs",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc --project tsconfig.json",
		"start": "node dist/index.js",
		"dev": "tsx watch src/index.ts",
		"clean": "rimraf dist",
		"pm2:start": "pm2 start ecosystem.config.js",
		"pm2:stop": "pm2 stop pinterest-youtube-pipeline",
		"pm2:restart": "pm2 restart pinterest-youtube-pipeline",
		"pm2:delete": "pm2 delete pinterest-youtube-pipeline",
		"pm2:logs": "pm2 logs pinterest-youtube-pipeline",
		"pm2:monit": "pm2 monit",
		"pm2:status": "pm2 status",
		"pm2:deploy": "npm run build && pm2 restart pinterest-youtube-pipeline"
	},
	"keywords": [
		"pinterest",
		"downloader",
		"youtube",
		"automation"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@google/generative-ai": "^0.24.1",
		"axios": "^1.7.7",
		"cheerio": "^1.0.0-rc.12",
		"dotenv": "^17.2.3",
		"express": "^4.19.2",
		"googleapis": "^162.0.0",
		"node-cron": "^3.0.3"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^22.9.0",
		"@types/node-cron": "^3.0.11",
		"rimraf": "^6.0.1",
		"tsx": "^4.19.1",
		"typescript": "^5.6.3"
	}
}
